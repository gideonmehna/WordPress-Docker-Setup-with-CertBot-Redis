[mysqld]
# Performance optimizations for WordPress
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Connection settings
max_connections = 100
connect_timeout = 60
wait_timeout = 28800
interactive_timeout = 28800

# Query cache (for read-heavy WordPress)
query_cache_type = 1
query_cache_size = 32M
query_cache_limit = 2M

# MyISAM settings (some WordPress plugins still use MyISAM)
key_buffer_size = 32M

# General settings
max_allowed_packet = 64M
thread_stack = 256K
thread_cache_size = 8

# Logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

[mysql]
default-character-set = utf8mb4

[mysqldump]
default-character-set = utf8mb4
